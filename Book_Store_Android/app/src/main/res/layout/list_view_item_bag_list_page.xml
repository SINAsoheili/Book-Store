<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_item_recyclerview_boughtList_page"
        android:layout_width="110dp"
        android:layout_height="130dp"
        android:src="@drawable/book"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:background="@drawable/image_view_corner_radius"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_item_recyclerview_boughtList_page"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/tv_book_name_item_recyclerview_BoughtList_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/BoughtListpage_title_textcolor"
            android:textSize="@dimen/text_size_title"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:text="bookname"
            />

        <TextView
            android:id="@+id/tv_book_autor_name_item_recyclerview_BoughtList_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/BoughtListpage_sub_title_textcolor"
            android:textSize="@dimen/text_size_sub_title"
            android:layout_below="@id/tv_book_name_item_recyclerview_BoughtList_page"
            android:layout_marginTop="10dp"
            android:layout_alignRight="@id/tv_book_name_item_recyclerview_BoughtList_page"
            android:gravity="right"
            android:text="book autor name"
            />

        <TextView
            android:id="@+id/tv_book_price_item_recyclerview_BoughtList_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/BoughtListpage_sub_title_textcolor"
            android:textSize="@dimen/text_size_sub_title"
            android:layout_alignRight="@id/tv_book_name_item_recyclerview_BoughtList_page"
            android:layout_below="@id/tv_book_autor_name_item_recyclerview_BoughtList_page"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:text="price"
            />

        <TextView
            android:id="@+id/tv_buy_book_item_recyclerview_BoughtList_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@id/tv_book_price_item_recyclerview_BoughtList_page"
            android:background="@null"
            android:text="خرید"
            android:textSize="@dimen/text_size_title"
            android:textColor="@color/BoughtListpage_buy_textcolor"
            android:layout_marginLeft="10dp"
            android:layout_alignBaseline="@id/tv_book_price_item_recyclerview_BoughtList_page"
            />

    </RelativeLayout>

</RelativeLayout>