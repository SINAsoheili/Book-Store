<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_item_recyclerview_searchpage"
        android:layout_width="110dp"
        android:layout_height="130dp"
        android:src="@drawable/book"
        android:layout_alignParentRight="true"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_item_recyclerview_searchpage"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/tv_book_name_item_recyclerview_searchpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/searchpage_title_textcolor"
            android:textSize="@dimen/text_size_title"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:text="bookname"
            />

        <TextView
            android:id="@+id/tv_book_autor_name_item_recyclerview_searchpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/searchpage_sub_title_textcolor"
            android:textSize="@dimen/text_size_sub_title"
            android:layout_below="@id/tv_book_name_item_recyclerview_searchpage"
            android:layout_marginTop="10dp"
            android:layout_alignRight="@id/tv_book_name_item_recyclerview_searchpage"
            android:gravity="right"
            android:text="book autor name"
            />

        <TextView
            android:id="@+id/tv_book_group_name_item_recyclerview_searchpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/searchpage_sub_title_textcolor"
            android:textSize="@dimen/text_size_sub_title"
            android:layout_alignRight="@id/tv_book_name_item_recyclerview_searchpage"
            android:layout_below="@id/tv_book_autor_name_item_recyclerview_searchpage"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:text="group name"
            />

        <TextView
            android:id="@+id/tv_book_publisher_item_recyclerview_searchpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/searchpage_sub_title_textcolor"
            android:textSize="@dimen/text_size_sub_title"
            android:layout_alignRight="@id/tv_book_name_item_recyclerview_searchpage"
            android:layout_below="@id/tv_book_group_name_item_recyclerview_searchpage"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:text="publisher"
            />

        <TextView
            android:id="@+id/tv_book_price_item_recyclerview_searchpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/searchpage_sub_title_textcolor"
            android:textSize="@dimen/text_size_sub_title"
            android:layout_alignParentLeft="true"
            android:layout_alignBaseline="@id/tv_book_publisher_item_recyclerview_searchpage"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            />

    </RelativeLayout>

</RelativeLayout>